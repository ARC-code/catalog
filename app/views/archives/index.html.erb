<h1>Listing archives</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Site url</th>
    <th>Thumbnail</th>
    <th>Carousel description</th>
    <th>Carousel image url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @archives.each do |archive| %>
  <tr>
    <td><%= archive.name %></td>
    <td><%= archive.site_url %></td>
    <td><%= archive.thumbnail %></td>
    <td><%= archive.carousel_description %></td>
    <td><%= archive.carousel_image_url %></td>
    <td><%= link_to 'Show', archive %></td>
    <td><%= link_to 'Edit', edit_archive_path(archive) %></td>
    <td><%= link_to 'Destroy', archive, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

